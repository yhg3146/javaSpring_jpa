package ch13;

import java.io.IOException;

public class SysteminTest11 {

	public static void main(String[] args) {
		System.out.println("알파벳 여러 개을 쓰고 [Enter]를 누르세요");
		
		int i;
		try {
			while(i=System.in.read());
			System.out.println(i);
			System.out.println((char)i);
		}catch(IOException e){
			e.printStackTrace();
		}
	}

}
